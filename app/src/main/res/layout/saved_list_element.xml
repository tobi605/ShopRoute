<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/choose_shop_background">

    <TextView
        android:id="@+id/list_element_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColor="@color/primary_text_color"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />
    <TextView
        android:id="@+id/list_element_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_element_date"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/primary_text_color"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp" />
    <Button
        android:id="@+id/delete_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/remove_list_button"
        android:text="@string/delete_saved"
        android:textColor="@color/white" />

</RelativeLayout>